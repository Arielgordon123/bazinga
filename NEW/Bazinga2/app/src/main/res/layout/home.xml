<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#4DB9B9B9"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity">

        <android.support.v7.widget.CardView
            android:id="@+id/userCardView"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="200dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center"
                    android:background="#00999898"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/userNameView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Israel Israeli"
                    android:textAlignment="center"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/fieldOfStudyView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Software Engineering"
                    android:textAlignment="center" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:textAlignment="center" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Statistics"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/testCard"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="180dp"
                android:layout_height="150dp"

                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/blueProgress"
                        style="?android:attr/progressBarStyle"

                        android:layout_width="match_parent"
                        android:layout_height="71dp"
                        android:layout_marginTop="10dp"
                        android:indeterminate="false"
                        android:indeterminateDrawable="@drawable/progress"
                        android:max="100"
                        android:progress="20" />

                    <View
                        android:id="@+id/divider7"
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/testCardTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Python test"
                        android:textAlignment="center"
                        android:textColor="#E91E63" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/genralCard"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="180dp"
                android:layout_height="150dp"

                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/pinkProgress"
                        style="?android:attr/progressBarStyle"

                        android:layout_width="match_parent"
                        android:layout_height="71dp"
                        android:layout_marginTop="10dp"
                        android:indeterminate="false"
                        android:indeterminateDrawable="@drawable/progress_pink"
                        android:max="100"
                        android:progress="20" />

                    <View
                        android:id="@+id/divider4"
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/nearestExamNameView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Genral progress"
                        android:textAlignment="center"
                        android:textColor="#E91E63" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/studyCard"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="180dp"
                android:layout_height="150dp"

                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/pinkProgress"
                        style="?android:attr/progressBarStyle"

                        android:layout_width="match_parent"
                        android:layout_height="71dp"
                        android:layout_marginTop="10dp"
                        android:indeterminate="false"
                        android:indeterminateDrawable="@drawable/progress_orange"
                        android:max="100"
                        android:progress="20" />

                    <View
                        android:id="@+id/divider5"
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/genralCardTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Time Reamaing"
                        android:textAlignment="center"
                        android:textColor="#E91E63" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/reamainingCard"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="180dp"
                android:layout_height="150dp"

                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/greenProgress"
                        style="?android:attr/progressBarStyle"

                        android:layout_width="match_parent"
                        android:layout_height="71dp"
                        android:layout_marginTop="10dp"
                        android:indeterminate="false"
                        android:indeterminateDrawable="@drawable/progress_green"
                        android:max="100"
                        android:progress="20" />

                    <View
                        android:id="@+id/divider6"
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/reamainingCardTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Test remaining"
                        android:textAlignment="center"
                        android:textColor="#E91E63" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

</LinearLayout>